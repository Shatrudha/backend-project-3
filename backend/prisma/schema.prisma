datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

enum EmailStatus {
  scheduled
  sent
  failed
}

model Email {
  id        Int         @id @default(autoincrement())
  to        String
  subject   String
  body      String
  sendAt    DateTime
  status    EmailStatus @default(scheduled)
  createdAt DateTime    @default(now())
}
